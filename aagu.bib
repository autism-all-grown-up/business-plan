  author = {Li, Jinchen and Hu, Shanshan and Zhang, Kun and Shi, Leisheng and Zhang, Yi and Zhao, Tingting and Wang, Lin and He, Xin and Xia, Kun and Liu, Chunyu and Sun, Zhongsheng},
  date = {2019-11},
  journaltitle = {Mol Psychiatry},
  volume = {24},
  number = {11},
  pages = {1720--1731},
