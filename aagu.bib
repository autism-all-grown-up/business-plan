@article{Chopik2021,
  title = {Age Differences in Broader Autism Phenotype Traits from Young Adulthood to Older Adulthood},
  author = {Chopik, William J. and Oh, Jeewon and Nuttall, Amy K. and Thakkar, Katharine N. and Ingersoll, Brooke},
  date = {2021},
  journaltitle = {Autism Research},
  volume = {14},
