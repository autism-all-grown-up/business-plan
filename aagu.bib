  author = {Pagni, Broc A. and Walsh, Melissa J. M. and Ofori, Edward and Chen, Kewei and Sullivan, Georgia and Alvar, Jocelyn and Monahan, Leanna and Guerithault, Nicolas and Delaney, Shanna and Braden, B. Blair},
  date = {2022},
  journaltitle = {Autism Research},
